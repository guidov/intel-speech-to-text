[Unit]
Description=Speech-to-Text Key Listener
Documentation=https://github.com/omarchy/speech-to-text
After=ydotoold.service
Wants=ydotoold.service

[Service]
Type=simple
User=root
WorkingDirectory=/opt/speech-to-text
ExecStart=/opt/speech-to-text/venv/bin/python3 /opt/speech-to-text/key_listener.py
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
