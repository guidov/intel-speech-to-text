[Unit]
Description=Speech-to-Text Key Listener
Documentation=https://github.com/michabbb/omarchy-speech-to-text
After=ydotoold.service
Wants=ydotoold.service

[Service]
Type=simple
User=root
WorkingDirectory=/home/guido/omarchy-speech-to-text
ExecStart=/home/guido/anaconda3/envs/omarchy/bin/python /home/guido/omarchy-speech-to-text/key_listener.py
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
